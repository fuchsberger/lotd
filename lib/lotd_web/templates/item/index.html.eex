<div class="table-container">
  <table class="display">
    <thead>
      <tr>
        <th>Item</th>
        <%= if authenticated?(@conn) do %><th data-sortable="false">Actions</th><% end %>
      </tr>
    </thead>
    <tbody>
      <%= for i <- @items do %>
        <tr>
          <td><strong><%= item_name(i) %></strong></td>
          <%= if authenticated?(@conn) do %><td><%= item_actions(@conn, i) %></td><% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
