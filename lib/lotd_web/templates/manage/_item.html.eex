<tr
  class='<%= if @item.id == @edit_id, do: "table-active" %>'
  phx-click='edit'
  phx-value-id='<%= @item.id %>'
>
  <td class='px-0'>
    <%= if @item.url, do: link icon("show"), to: @item.url, target: "_blank" %>
  </td>
  <td><%= @item.name %></td>
  <td class='small'><%= @item.display.name %></td>
  <td class='small'><%= unless is_nil(@item.location_id), do: @item.location.name %></td>
  <td class='small'><%= @item.mod.name %></td>
</tr>
