<div class="table-container">
  <table class="display">
    <thead>
      <tr>
        <th>Location</th>
        <%= if active_character_id(@conn) do %>
          <th class='is-hidden-touch' data-searchable="false">Items Found</th>
        <% end %>
        <th class='is-hidden-touch' data-searchable="false">Items Total</th>
        <%= if moderator?(@conn) do %>
          <th data-searchable="false" data-sortable='false' width='35px'></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <%= for l <- @locations do %>
        <tr>
          <td><strong><%= name_link(l) %></strong></td>
          <%= if active_character_id(@conn) do %>
            <td class='is-hidden-touch'><%= l.character_item_count %></td>
          <% end %>
          <td class='is-hidden-touch'><%= Enum.count(l.items) %></td>
          <%= if moderator?(@conn) do moderator_actions(@conn, l) end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
