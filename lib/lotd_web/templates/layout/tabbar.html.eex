<%# Desktop Menu %>
<div class="tabs is-centered is-marginless is-hidden-touch">
  <ul>
    <%= menu_link(@conn, :item) %>
    <%= menu_link(@conn, :display) %>
    <%= menu_link(@conn, :quest) %>
    <%= menu_link(@conn, :location) %>
    <%= menu_link(@conn, :mod) %>
    <%= if authenticated?(@conn) do menu_link(@conn, :character) end %>
    <%= if admin?(@conn) do menu_link(@conn, :user) end %>
  </ul>
</div>
