<%# Desktop Menu %>
<div class="tabs is-centered is-marginless is-hidden-touch">
  <ul>
    <%= menu_link(@conn, nil, "Items") %>
    <%= menu_link(@conn, :displays, "Displays") %>
    <%= menu_link(@conn, :locations, "Locations") %>
    <%= if authenticated?(@conn) do menu_link(@conn, :characters, "Characters") end %>
    <%= if admin?(@conn) do menu_link(@conn, :users, "Users") end %>
  </ul>
</div>
