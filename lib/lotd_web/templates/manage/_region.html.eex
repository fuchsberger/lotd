<tr
  class='<%= if @region.id == @edit_id, do: "table-active" %>'
  phx-click='edit'
  phx-value-id='<%= @region.id %>'
>
  <td><%= @region.name %></td>
  <td class='small'><%= if @region.url, do: link @region.url, to: @region.url, target: "_blank" %></td>
  <td><%= Enum.count @region.locations %></td>
<tr>
